<div class ="container">
  <div class= "row ">
    </div>

    <div class="col-md-2">
    <h3>
      <mark>注文履歴一覧</mark>
    </h3>
    <div class="col-md-11">
  <table class="table">
    <thead>
      <tr>
        <th height="45">注文日</th>
        <th height="45">配送先</th>
        <th height="45">注文商品</th>
        <th height="45">支払金額</th>
        <th height="45">ステータス</th>
        <th height="45">注文詳細</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
        <td>
          <%= order.postcode %><br>
          <%= order.address %><br>
          <%= order.name %>
        </td>
        <td>
          <% order.order_items.each do |order_item| %>
          <%= order_item.item.name %>
          <br>
        <% end %>
        </td>
        <td><%= order.total_price %></td>
        <td><%= order.order_status %></td>
        <td><%= link_to "注文詳細", admins_order_path(order) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
</div>