<div class ="container">
  <div class= "row">
  	<div class="col-md-2">
  	<h3><mark>注文履歴一覧</mark></h3>
  	</div>

  	<div class="col-md-11">
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>注文日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td><%= link_to order.created_at.strftime("%Y年%m月%d日%H時%M分"), admins_order_path(order) %></td>
			<td><%= order.customer.last_name + order.customer.first_name %></td>
			<td><%= order.order_items.sum(:quantity) %></td>
			<td><%= order.order_status %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
<ul class="pagination">
  <li><a href="#">1</a></li>
  <li><a href="#">2</a></li>
  <li><a href="#">3</a></li>
  <li><a href="#">4</a></li>
  <li><a href="#">5</a></li>
</ul>
</div>
