<p>注文履歴詳細</p>
<table class="table">
  <thead>
    <tr>
      <th>購入者</th>
      <th><%= @order.customer.last_name + @order.customer.first_name %></th>
    </tr>
    <tr>
      <th>配達先</th>
      <th><%= @order.postcode %><%= @order.address %><%= @order.name %>
      </th>
    </tr>
    <tr>
      <th>支払い方法</th>
      <th><%= @order.payment_method %></th>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <th>
        <%= form_for @order, url: admins_order_path do |f| %>
        <%= f.select :order_status, ["入金待ち", "入金確認", "製作中", "発送準備中", "発送済"] %>
        <%= f.submit "更新"%>
        <% end %>
      </th>
    </tr>
  </thead>
</table>




<p>注文内容</p>
  <table>
    <thead>
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.price %></td>
        <td><%= order_item.quantity %></td>
        <td>
          <%= (order_item.price * order_item.quantity) %>
        </td>
        <td>
          <%= form_for order_item, url: production_status_update_path(order_item) do |f| %>
          <%= f.select :production_status, ["着手不可", "製作待ち", "製作中", "製作完了"] %>
          <%= f.submit "更新"%>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>

  <table>
    <thead>
      <tr>
        <th>商品合計</th>
        <th><%= (order_item.price * order_item.quantity) %>円</th>
      </tr>
      <tr>
        <th>送料</th>
        <th>800円</th>
      </tr>
      <tr>
        <th>請求金額合計</th>
        <th><%= @order.total_price %>円</th>
      </tr>
    </thead>
  </table>
  <% end %>