<p>注文確認</p>
  <div>
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <% @total += ((cart_item.item.unit_price * 1.1).floor * cart_item.quantity) %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= (cart_item.item.unit_price * 1.1).floor %></td>
          <td><%= cart_item.quantity %></td>
          <td><%= ((cart_item.item.unit_price * 1.1).floor * cart_item.quantity) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div>
    <table>
      <thead>
        <tr>
          <th>送料</th>
          <td>800</td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td><%= @total %></td>
        </tr>
        <tr>
          <th>請求額</th>
          <td><%= @total + 800 %></td>
        </tr>
      </thead>
    </table>
  </div>

  <h3>支払方法</h3>
  <p><%= session[:order]["payment_method"] %></p>
  <h3>お届け先</h3>
  <P><%= session[:order]["postcode"] %></P>
  <p><%= session[:order]["address"] %></p>
  <p><%= session[:order]["name"] %></p>
  <%= button_to "購入を確定する", orders_path, method: :post %>