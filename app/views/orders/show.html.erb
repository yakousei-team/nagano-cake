<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
<h2>注文履歴詳細</h2>
  <h4>注文情報</h4>
  <table class="table">
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          <%= @order.postcode %><br>
          <%= @order.address %><br>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.order_status %></td>
      </tr>
  </table>

  <h4>注文内容</h4>
  <table class="table">
    <thead>
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order_item.each do |order_item| %>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.price %></td>
        <td><%= order_item.quantity %></td>
        <td>
          <%= (order_item.price * order_item.quantity) %>
          <% @total += (order_item.price * order_item.quantity) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <h4>請求情報</h4>
  <table class="table">
    <tr>
      <th>商品合計</th>
      <td><%= @total %></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <th>ご請求金額</th>
      <td><%= (@total + @order.postage) %></td>
    </tr>
  </table>
</div>
</div>
</div>