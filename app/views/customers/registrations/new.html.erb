<script type="text/javascript" src="//jpostal-1006.appspot.com/jquery.jpostal.js"></script>

<div class="nav-img1"></div>
<div class="container">
    <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-6 visitor-box signup-box">
      <div class="visitor-inbox">
        <h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
  <div class="field form-inline">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, class: "name form-control" %>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, class: "name form-control" %>
  </div><br>

  <div class="field form-inline">
    <%= f.label :last_name_kana %><br />
    <%= f.text_field :last_name_kana, autofocus: true, class: "name form-control" %>
    <%= f.label :first_name_kana %><br />
    <%= f.text_field :first_name_kana, autofocus: true, class: "name form-control" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "email form-control" %>
  </div>

  <div class="field">
    <%= f.label :postcode %><br />
    <%= f.text_field :postcode, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "password form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "password_confirm form-control" %>
  </div>

  <div class="actions pull-right get-button">
    <%= f.submit "Sign up" ,class: 'btn btn-success' %>
  </div>
<% end %>
</div>
<%= render "customers/shared/links" %>
        </div>
      </div>
      </div>
</div>
</div>
