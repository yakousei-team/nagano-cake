<div class="nav-img1"></div>
<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-6 visitor-box">
      <div class="visitor-inbox">
      <h2>Log in</h2>
        <%= flash[:error] %>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
          <br>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン情報を記憶する" %>
          </div>
        <% end %>
          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-success" %>
          </div>
        <% end %>
        <div class="links-inbox">
          <%= render "customers/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
