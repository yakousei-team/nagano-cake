<div class="nav-img1 main-top"></div>
<div class ="container">
  <div class= "row">
  	<div class="col-md-2"></div>
  	<div class="col-md-5">

	<h2>配送先登録	/一覧</h2>
		<%= form_with(model:@delivery, url: customers_deliveries_path, local: true) do |f| %>
		<div class="form-group">
			<p>郵便番号<%= f.text_field :postcode, class: "form-control" %></p>
			<p>住所<%= f.text_area :address, class: "form-control" %></p>
			<p>宛名<%= f.text_field :name, class: "form-control" %></p>
			<%= f.submit "登録する", class: "btn btn-success get-button" %>
		</div>
		<% end %>
	</div>
	</div>

  <div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<table class="table">
  			<thead>
			  <tr>
	　　			<th>郵便番号</th>
	　　			<th>住所</th>
				<th>宛名</th>
    		  </tr>
  			</thead>
		    <tbody>
  				<% @deliveries.each do |delivery| %>
  				<tr>
					<td><%= delivery.postcode %></td>
					<td><%= delivery.address %></td>
    				<td><%= delivery.name %></td>
					<td><%= link_to "編集", edit_customers_delivery_path(delivery) %></td>
					<td><%= link_to "削除", customers_delivery_path(delivery), method: :delete %></td>
  				</tr>
  		    	<% end %>
			</tbody>
		</table>
	</div>
  </div>



	</div>
  </div>