<div class="container">
  <div class="row">

    <!-- ジャンル検索 -->
    <div class="col-xs-2">
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="active text-center"><h5>ジャンル検索</h5></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <!-- 商品一覧 -->
    <div class="col-xs-1">
    </div>

    <div class="col-xs-9">
      <div class="row">
        <div style="float: left">
          <%= attachment_image_tag @item, :image, size: "300x300" %>
        </div>
        <div style="width:400px; height:300px; float:left;">
          <h3><%= @item.name %></h3><br>
          <p><%= @item.description %></p>
          <p class="price">¥<%= (@item.unit_price*1.1).floor %>（税込）</p>
        </div>
      </div>
      <div class="col-xs-5">
      <strong class="error"><%= notice %></strong>
        <%= form_for @cart_item, url: cart_items_path(@cart_item) do |f| %>
        <%= f.hidden_field :item_id , :value => @item.id%>
        <%= f.number_field :quantity , placeholder: "個数選択", min: 1, max: 10, step:1 %>
        <%= f.submit "カートに入れる" ,class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>