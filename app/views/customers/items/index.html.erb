
<div class="container">
  <div class="row">

    <!-- ジャンル検索 -->
    <div class="col-xs-2">
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="active text-center"><h5>ジャンル検索</h5></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td class="underline">genre.name</td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <!-- 商品一覧 -->
    <div class="col-xs-1">
    </div>
    
    <div class="col-xs-9">
      <h2><i class="fas fa-cookie-bite"></i>商品一覧<span style="font-size:20px;">（全<%= @total_number %>件）</span></h2><br>
        <div class="row">
          <% @items.each do |item| %>
            <div class="box" style="float:left; margin-right:20px;">
            <%= link_to customer_item_path(item.id) do %> <!-- 画像をクリックしたら商品詳細画面へ遷移 -->
              <%= attachment_image_tag item, :image, size: "170x170" %><br>
            <% end %>
              <p><%= item.item_name %></p>
              <p>¥<%= (item.unit_price*1.1).floor %></p> 
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>